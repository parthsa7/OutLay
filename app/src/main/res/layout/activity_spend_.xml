<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grayBackground"
    android:layout_height="match_parent"
    tools:context=".Spend_Activity">

    <EditText
        android:id="@+id/spend_entry"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/black"
        android:hint="Enter amount of expenditure"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/text_ops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:text="Select the way of Spending ... "
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@+id/spend_entry"/>

    <Spinner
        android:id="@+id/spinner"

        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_below="@+id/text_ops"
        android:layout_centerInParent="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"

        android:dropDownSelector="@color/grayBackground"
        android:elevation="10dp"
        android:padding="8dp" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_centerInParent="true"
        android:text="ADD"
        android:textSize="25sp"
        android:layout_marginTop="15dp" />




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="645dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rounded"
        app:itemTextColor="@color/black"
        app:menu="@menu/menu"
        />

</RelativeLayout>